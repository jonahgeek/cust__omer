@page
@model Cust__omer.Pages.Companies.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-5 px-5">
    <div class="row mb-3">
        <div class="col-md-8">
            Current registered Companies
        </div>
        <div class="col-md-4">
            <div class="d-grid">
                <a class="btn btn-sm btn-info" asp-page="Create">Register Company</a>
            </div>
        </div>
    </div>
    <div class="row">
        @foreach (var item in Model.Company)
        {
            <div class="col-md-12 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5>@Html.DisplayFor(modelItem => item.Name)</h5>
                        <p class="text-small">
                            @Html.DisplayFor(modelItem => item.Address)
                        </p>
                    </div>
                    <div class="card-footer">
                        <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
