@page
@model Cust__omer.Pages.Companies.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="row mt-5">
        <div class="offset-md-4 col-md-5">
            <div class="card border-danger">
                <div class="card-body">
                    <strong class="text-danger">Are you sure you want to delete @Html.DisplayFor(model => model.Company.Name) ?</strong>
                    <p>
                        <form method="post">
                            <input type="hidden" asp-for="Company.Id" />
                            <input type="submit" value="Delete" class="btn btn-danger" />
                        </form>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
