@page
@model Cust__omer.Pages.Receipts.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="text-center mt-5">
        <h3>Generate New Receipt</h3>
    </div>
    <div class="row">
        <div class="offset-md-4 col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Receipt.DateOfIssue" class="form-control" />
                    <label asp-for="Receipt.DateOfIssue" class="control-label"></label>
                    <span asp-validation-for="Receipt.DateOfIssue" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Receipt.AmountDue" class="form-control" />
                    <label asp-for="Receipt.AmountDue" class="control-label"></label>
                    <span asp-validation-for="Receipt.AmountDue" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <label asp-for="Receipt.CustomerId" class="control-label"></label>
                    <select asp-for="Receipt.CustomerId" class ="form-control" asp-items="ViewBag.CustomerId"></select>
                </div>
                <div class="form-floating mb-3">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
